@model IEnumerable<ProjEmpresa.Models.Empresa>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Empresas</h2>
<br />
@using (Html.BeginForm())
{
<p>
    @Html.Label("Procure a empresa por nome ou CNPJ (apenas números):")
    <br />
    <br />
    <input type="text" , id="SearchString" name="SearchString" class="form-control" PlaceHolder="CNPJ ou NOME" />
    <br />
    <input type="submit" value="Buscar Empresa" class="btn btn-default" />
</p>
}
<table class="table">
    <tr>
        <th>
            CNPJ
        </th>
        <th>
            Nome da Empresa
        </th>
        <th>
            Data de Abertura
        </th>
        <th>
            Atividades
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cnpj)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dataAbertura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.atividade)
            </td>
            <td>
                @Html.ActionLink("Deletar empresa", "Delete", new { id = item.idEmpresa })
            </td>
        </tr>
    }

</table>
