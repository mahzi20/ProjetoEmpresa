@model ProjEmpresa.Models.Empresa

@{
    ViewBag.Title = "Delete";
}

<h2>Excluir Empresa</h2>

<h3>Você tem certeza que quer excluir esta empresa?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("CNPJ:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cnpj)
        </dd>

        <dt>
            @Html.Label("Nome da Empresa:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nome)
        </dd>

        <dt>
            @Html.Label("Data de Abertura:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dataAbertura)
        </dd>

        <dt>
            @Html.Label("Atividade Principal:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.atividade)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar para a lista", "Index")
        </div>
    }
</div>
